@model AIIntegratedCRM.Models.Entities.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<hr />

<h3 class="text-danger">Are you sure you want to delete this customer?</h3>

<div class="row mb-3">
    <dt class="col-sm-3">Full Name</dt>
    <dd class="col-sm-9">@Model.FullName</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Company</dt>
    <dd class="col-sm-9">@Model.Company</dd>

    <dt class="col-sm-3">Phone</dt>
    <dd class="col-sm-9">@Model.Phone</dd>

    <dt class="col-sm-3">Notes</dt>
    <dd class="col-sm-9">@Model.Notes</dd>

    <dt class="col-sm-3">Created At</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">
        <i class="fas fa-trash-alt"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Cancel
    </a>
</form>

@section Scripts {
    <!-- FontAwesome for icons (if not already in _Layout) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"
            integrity="sha512-rXla7mH565p1tKpssMf315sPBea22ZRTzBjEGG+eQcMZlRcrQwyIV4RPTtxeha2SyKb3sJ16fNxDGUfmlXJY1w=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
