@model AIIntegratedCRM.Models.Entities.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<hr />

<div class="row mb-3">
    <dt class="col-sm-3">Full Name</dt>
    <dd class="col-sm-9">@Model.FullName</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Company</dt>
    <dd class="col-sm-9">@Model.Company</dd>

    <dt class="col-sm-3">Phone</dt>
    <dd class="col-sm-9">@Model.Phone</dd>

    <dt class="col-sm-3">Notes</dt>
    <dd class="col-sm-9">@Model.Notes</dd>

    <dt class="col-sm-3">Created At</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
</div>

<div class="d-flex">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
        <i class="fas fa-edit"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    <!-- FontAwesome for icons (if not already in _Layout) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"
            integrity="sha512-rXla7mH565p1tKpssMf315sPBea22ZRTzBjEGG+eQcMZlRcrQwyIV4RPTtxeha2SyKb3sJ16fNxDGUfmlXJY1w=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
